<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_app.OnBoarding"
             BackgroundImageSource="Subtract.png" 
             BackgroundColor="#2e74e6">
    <ContentPage.Content>
        <StackLayout Padding="60" VerticalOptions="EndAndExpand" HorizontalOptions="Fill">

            
            
            
            <Label Text="Let's Get Started"
                FontSize="36"
                TextColor="Black"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            

            <Button
                VerticalOptions="Center"
                Text="Login"
                TextColor="White"
                BackgroundColor="#0f64f7"
                CornerRadius="50"
                ></Button>
            <Button
                VerticalOptions="Center"
                Text="Sign Up"
                TextColor="Black"
                BackgroundColor="LightGray"
                CornerRadius="50"
                
                ></Button>
            <Button
                VerticalOptions="Center"
                Text="Skip"
                TextColor="Black"
                BackgroundColor="Transparent"
                
                ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>